apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: simple-http-server-preview-ingress
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /$1
    nginx.ingress.kubernetes.io/use-regex: "true"
spec:
  rules:
    - http:
        paths:
          - path: /simple-http-server-preview/(.*)
            pathType: Prefix
            backend:
              service:
                name: simple-http-server-service-preview
                port:
                  number: 80
          - path: /simple-http-server-preview
            pathType: Prefix
            backend:
              service:
                name: simple-http-server-service-preview
                port:
                  number: 80
